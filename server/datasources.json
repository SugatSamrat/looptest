  "wcsProductDS": {
    "name": "wcsProductDS",
    "connector": "rest",
    "debug": "true",
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "http://toothless.ngrok.com/search/resources/store/11001/productview/byId/{productId}",
          "headers": {
            "content-type": "application/json"
          },
          "query": {
               "$productId": "{productId}"
              },
          "responsePath": "$.results[0]"
        },
        "functions": {
          "getProductById": ["productId"]
        }
      }
    ]
  },
